// Team section Start
section#team.section
  .container
    .section-header
      h2.section-title #{allTeams.title} 
      hr.lines
      p.section-subtitle #{allTeams.description} 
        
    .row
       each team in allTeams.teams
        .col-lg-3.col-md-6.col-xs-12
          .single-team
            img(src='img/team/'+team.image, alt='')
            .team-details
              .team-inner
                h #{team.name} 
                p #{team.designation}
                ul.social-list
                  li.facebook
                    a(href='#')
                      i.fa.fa-facebook
                  li.twitter
                    a(href='#')
                      i.fa.fa-twitter
                  li.google-plus
                    a(href='#')
                      i.fa.fa-google-plus
                  li.linkedin
                    a(href='#')
                      i.fa.fa-linkedin
      
